const CACHE_NAME = "assist-you-v3";

/**
 * Files that MUST be available offline
 * (keep paths absolute and correct)
 */
 const URLS_TO_CACHE = [
  "/assist-you/",
  "/assist-you/index.html",
  "/assist-you/manifest.json",
  "/assist-you/icon-192.png",
  "/assist-you/icon-512.png",
  "/assist-you/sounds/ding.mp3",
  "/assist-you/sounds/soft.mp3",
];

/* ===========================
   INSTALL
   =========================== */
self.addEventListener("install", (event) => {
  self.skipWaiting();

  event.waitUntil(
    caches.open(CACHE_NAME).then((cache) => {
      return cache.addAll(URLS_TO_CACHE);
    })
  );
});

/* ===========================
   ACTIVATE
   =========================== */
self.addEventListener("activate", (event) => {
  event.waitUntil(
    Promise.all([
      // ðŸ”¥ take control immediately (important for installed PWA)
      self.clients.claim(),

      // ðŸ§¹ clean old caches
      caches.keys().then((keys) =>
        Promise.all(
          keys
            .filter((key) => key !== CACHE_NAME)
            .map((key) => caches.delete(key))
        )
      ),
    ])
  );
});

/* ===========================
   FETCH
   =========================== */
self.addEventListener("fetch", (event) => {
  event.respondWith(
    caches.match(event.request).then((cached) => {
      // serve cache first, fallback to network
      return cached || fetch(event.request);
    })
  );
});
